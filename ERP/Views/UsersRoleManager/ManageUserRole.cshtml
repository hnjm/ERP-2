@using ERP.Models.ViewModel.Users
@model ERP.Models.ViewModel.Roles.SelectUserForRoleModel[]

@{
    var user = ViewBag.User as UsersDetailsViewModel;
    ViewData["Title"] = "ManageUserRole";
}

<div>
    <hr />
    <form asp-action="ManageUserRole">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(_ => user.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(_ => user.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(_ => user.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(_ => user.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(_ => user.Claims)
            </dt>
            <dd class="col-sm-10">
                @{
                    if (user!.Claims.Length > 0)
                    {
                        <label>[ </label>

                        var count = 0;

                        while (count != user.Claims.Length)
                        {
                            <a asp-controller="Claims" asp-action="Details" asp-route-id="@user.Claims[count].Id">
                                @user.Claims[count].Type
                            </a>

                            if (count == user.Claims.Length - 1)
                            {
                                <label> ]</label>
                            }
                            else
                            {
                                <label> + </label>
                            }

                            count++;
                        }
                    }
                    else
                    {
                        <label>No Claim</label>
                    }

                    <a asp-controller="UsersClaimManager" asp-action="ManageUserClaim" asp-route-id="@user.Id">Manage Claim</a>
                }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x)
            </dt>
            <dd class="col-sm-10">
                @for (var i = 0; i < Model.Length; i++)
                {
                    <input asp-for="@Model[i].IsSelected" />
                    <label asp-for="@Model[i].IsSelected">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Name" />
                    if (i != Model.Length - 1)
                    {
                        <label style="color: brown">--</label>
                    }
                }
            </dd>
        </dl>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-outline-primary btn-dark" />
                </div>
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-controller="Users" asp-action="Details" asp-route-id="@user!.Id">Back to User</a>
</div>
